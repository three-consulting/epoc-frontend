{
    "name": "epoc-frontend",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": "16"
    },
    "scripts": {
        "dev": "next dev",
        "dev-local": "export JWT_ISSUER=$(gopass show --password 3/epoc/auth/SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER-URI) && export NEXT_PUBLIC_FIREBASE_API_KEY=$(gopass 3/epoc/auth/NEXT_PUBLIC_FIREBASE_API_KEY) && export NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=$(gopass 3/epoc/auth/NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN) && concurrently yarn:heroku-login yarn:start-server yarn:dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint && yarn prettier . --check",
        "lint-fix": "eslint . --fix && yarn prettier . --write",
        "type-check": "tsc",
        "postinstall": "husky install",
        "types": "yarn openapi-typescript http://localhost:8080/docs --output lib/types/api.ts",
        "start-server": "docker-compose -f epoc-compose.yaml up",
        "heroku-login": "docker login --username=_ --password=$(heroku auth:token) registry.heroku.com",
        "test": "jest --env=jsdom"
    },
    "dependencies": {
        "@chakra-ui/icons": "^1.0.15",
        "@chakra-ui/react": "^1.6.7",
        "@emotion/react": "^11.4.1",
        "@emotion/styled": "^11.3.0",
        "@swc/core": "^1.2.130",
        "@swc/jest": "^0.2.17",
        "firebase": "^9.6.10",
        "firebase-admin": "^10.0.2",
        "framer-motion": "^6.2.1",
        "lodash": "^4.17.21",
        "next": "^12.0.2",
        "react": "17.0.2",
        "react-calendar": "^3.7.0",
        "react-dom": "17.0.2",
        "react-icons": "^4.3.1",
        "react-responsive": "^9.0.0-beta.4",
        "styled-components": "^5.3.3",
        "swr": "^1.1.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.1.0",
        "@commitlint/config-conventional": "^16.0.0",
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@types/faker": "^6.6.9",
        "@types/jest": "^27.4.0",
        "@types/react": "17.0.38",
        "@types/react-calendar": "^3.5.0",
        "@types/react-dom": "^17.0.11",
        "@types/sinon": "^10.0.9",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "concurrently": "^7.0.0",
        "eslint": "8.7.0",
        "eslint-config-next": "12.0.8",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-strict": "^14.0.1",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.25.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "faker": "^6.6.6",
        "husky": "^7.0.2",
        "jest": "^27.4.7",
        "lint-staged": "^12.1.2",
        "openapi-typescript": "^5.1.1",
        "prettier": "^2.3.2",
        "sinon": "^13.0.0",
        "typescript": "4.5.5"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --max-warnings=1 --fix",
            "prettier --write"
        ]
    }
}
