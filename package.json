{
    "name": "epoc-frontend",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": "16"
    },
    "scripts": {
        "dev": "next dev",
        "dev-local": "export JWT_ISSUER=$(gopass show --password 3/epoc/firebase/dev/SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER-URI) && export NEXT_PUBLIC_FIREBASE_API_KEY=$(gopass 3/epoc/firebase/dev/NEXT_PUBLIC_FIREBASE_API_KEY) && export NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=$(gopass 3/epoc/firebase/dev/NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN) && export FIREBASE_SERVICE_ACCOUNT_JSON=$(gopass 3/epoc/firebase/dev/sa) && export NEXT_PUBLIC_API_URL=http://localhost:8080 && concurrently yarn:heroku-login yarn:start-server yarn:dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint && yarn prettier . --check",
        "lint-fix": "eslint . --fix && yarn prettier . --write",
        "type-check": "tsc",
        "postinstall": "husky install",
        "types": "yarn openapi-typescript https://epoc-backend-testing.herokuapp.com/docs --output lib/types/api.ts && curl https://epoc-backend-testing.herokuapp.com/docs | node ./script/generateTypeMetadata.js > lib/types/typeMetadata.ts && yarn prettier lib/types/typeMetadata.ts --write",
        "start-server": "docker compose -f epoc-compose.yaml up",
        "heroku-login": "docker login --username=_ --password=$(heroku auth:token) registry.heroku.com",
        "test": "jest --env=jsdom",
        "validate-types-dev": "yarn openapi-typescript https://epoc-backend-testing.herokuapp.com/docs --output tmp.ts && diff tmp.ts lib/types/api.ts && rm tmp.ts",
        "validate-types-prod": "yarn openapi-typescript https://epoc-backend.herokuapp.com/docs --output tmp.ts && diff tmp.ts lib/types/api.ts && rm tmp.ts"
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.0.9",
        "@chakra-ui/react": "^2.3.1",
        "@chakra-ui/styled-system": "^2.0.0",
        "@chakra-ui/system": "^2.0.0",
        "@emotion/react": "^11.10.0",
        "@emotion/styled": "^11.10.0",
        "@swc/core": "^1.2.241",
        "firebase": "^9.9.3",
        "firebase-admin": "^11.0.1",
        "framer-motion": "^7.2.0",
        "lodash": "^4.17.21",
        "luxon": "^3.0.3",
        "next": "^12.2.5",
        "react": "^18.2.0",
        "react-calendar": "^3.7.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.4.0",
        "react-is": "^16.8.0",
        "react-responsive": "^9.0.0-beta.10",
        "styled-components": "^5.3.5",
        "swr": "^1.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@swc/jest": "^0.2.22",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@types/jest": "^28.1.7",
        "@types/luxon": "^3.0.1",
        "@types/react": "^18.0.15",
        "@types/react-calendar": "^3.5.1",
        "@types/react-dom": "^18.0.6",
        "@types/sinon": "^10.0.9",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "concurrently": "^7.0.0",
        "eslint": "8.23.0",
        "eslint-config-next": "^12.2.5",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-strict": "^14.0.1",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "^28.1.3",
        "lint-staged": "^13.0.3",
        "openapi-typescript": "^5.1.1",
        "prettier": "^2.7.1",
        "sinon": "^14.0.0",
        "typescript": "4.7.4",
        "yarn-audit-fix": "^9.3.5"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --max-warnings=1 --fix",
            "prettier --write"
        ]
    }
}
